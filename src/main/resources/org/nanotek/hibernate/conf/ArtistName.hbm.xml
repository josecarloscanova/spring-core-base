<?xml version="1.0"?>
<hibernate-mapping package="org.nanotek.beans.mb"
	xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping
    http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd">

    <class name="Artist" table="ARTIST_NAME" >

    	<id name="id" type="long"  column="ID">
			<generator class="identity" />
        </id>
        
        <property name="hashkey" type="string" column="HASHKEY" length="30" />
		<property name="name" type="string" column="NAME" length="500"/>
		<property name="sortName" type="string" column="SORT_NAME" length="500"/>
        
    </class>
    
</hibernate-mapping>